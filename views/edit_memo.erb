<h2>メモ内容変更</h2>
<section class="memo-content">
  <form method="post" action="/memos/<%= @current_memo[:id] %>">
    <input class="text-title" type="text" name="title" value="<%= h(@current_memo[:title]) %>">
    <textarea id="memo" name="content" cols="50" rows="20" placeholder="メモを入力"><%= h(@current_memo[:content]) %></textarea>
    <input type="submit" value="変更する">
    <input type="hidden" name="_method" value="patch">
  </form>
  <a href='/'>トップへ戻る</a>
</section>
